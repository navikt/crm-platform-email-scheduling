<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>List View Button</masterLabel>
    <description>Create a button to open any list view</description>
    <targets>
        <target>lightning__AppPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage">
            <property name="sObjectApiName" type="String" label="SObject API Name" placeholder="Account" required="true"/>
            <property name="listViewApiName" type="String" label="List View API Name" placeholder="Recent" required="true"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>