<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OrgWideEmailAddressId_correctId</fullName>
    <active>true</active>
    <errorConditionFormula>!REGEX( OrgWideEmailAddressId__c, &apos;[a-zA-Z0-9]{18}|[a-zA-Z0-9]{15}&apos; ) 
  &amp;&amp;
!BEGINS( OrgWideEmailAddressId__c, &apos;0D2&apos;)</errorConditionFormula>
    <errorDisplayField>OrgWideEmailAddressId__c</errorDisplayField>
    <errorMessage>OrgWideEmailAddressId__c must be 15 or 18 characters, and being with &apos;0D2&apos; prefix</errorMessage>
</ValidationRule>
